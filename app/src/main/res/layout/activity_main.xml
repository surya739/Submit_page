<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/heading"
            android:layout_width="411dp"
            android:layout_height="79dp"
            android:background="#487ABF"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="276dp"
                android:layout_height="45dp"
                android:text="Submit post"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="45dp"
                android:gravity="end"
                android:text="Done"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_and_description"
            android:layout_width="347dp"
            android:layout_height="200dp"
            android:layout_marginTop="-15dp"
            android:layout_margin="15dp"
            android:background="@drawable/description"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Axon Cycles"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:gravity="top"
                android:hint="Type Description"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categaroies"
            android:layout_width="342dp"
            android:layout_height="113dp"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/description"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_and_description">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:text="Select Category"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#EFE6EF"
                    android:text="food" />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#EFE6EF"
                    android:text="India" />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/additems"
            android:layout_width="340dp"
            android:layout_height="242dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/description"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categaroies"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/previous"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp" />

            <LinearLayout
                android:layout_width="225dp"
                android:layout_height="242dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageis"
                    android:layout_width="match_parent"
                    android:layout_height="189dp" />

                <Button
                    android:id="@+id/pink_images"
                    android:layout_width="214dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:text="Pink Images"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/price"
            android:layout_width="321dp"
            android:layout_height="104dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/description"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/additems"
            tools:ignore="MissingConstraints"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
           >


            <TextView
                android:id="@+id/pr"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pramount"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:hint="amount"
                android:background="@drawable/description"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/sellingpr"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:text="selling "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/sellingpramount"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:hint="amount"
                    android:background="@drawable/description"/>
            </LinearLayout>





        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>